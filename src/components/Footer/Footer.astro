---
import Icon from "astro-icon";

/* This example requires Tailwind CSS v2.0+ */
const navigation = [
  {
    name: "Facebook",
    href: "#",
    icon: "bi:facebook",
  },
  {
    name: "Instagram",
    href: "#",
    icon: "bi:instagram",
  },
  {
    name: "Twitter",
    href: "#",
    icon: "bi:twitter",
  },
  {
    name: "GitHub",
    href: "#",
    icon: "bi:github",
  },
  {
    name: "Dribbble",
    href: "#",
    icon: "bi:dribbble",
  },
];
---

<footer class="bg-neutral-100 dark:bg-slate-900">
  <div
    class="max-w-7xl mx-auto py-12 px-4 sm:px-6 md:flex md:items-center md:justify-between lg:px-8"
  >
    <div class="flex justify-center space-x-6 md:order-2">
      {
        navigation.map((item) => (
          <a
            href={item.href}
            class="text-slate-900 dark:text-neutral-100 hover:text-white dark:hover:text-neutral-200 transition duration-150 ease-in-out"
          >
            <span class="sr-only">{item.name}</span>
            <Icon name={item.icon} class="h-6 w-6" aria-hidden="true" />
          </a>
        ))
      }
    </div>
    <div class="mt-8 md:mt-0 md:order-1">
      <p class="text-center text-base text-gray-400">
        &copy; 2022 Beanlea Web Development. All rights reserved.
      </p>
    </div>
  </div>
</footer>
