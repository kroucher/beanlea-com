---
import { ChevronRightIcon } from "@heroicons/react/outline";
import HeroSVG from "./HeroSVG"
---



<main>
    <div class="sm:pt-6 bg-neutral-100 dark:bg-slate-900 lg:pb-14 lg:overflow-hidden ">
     
        <div class="flex flex-col sm:flex-row items-center justify-between relative">
          <div class="sm:px-6 sm:text-center lg:px-0 lg:text-left lg:flex lg:items-center justify-between">
            <div class="lg:py-24 px-16">
            
              <h1 class="mt-4 text-4xl tracking-tight font-bold text-slate-900 dark:text-neutral-100 sm:mt-5 sm:text-6xl sm:tracking-tight lg:mt-6 xl:text-6xl xl:tracking-tight">
                <span class="block">We create websites</span>
                <span class="block text-blue-400">tailored to your business</span>
              </h1>
              <p class="mt-3 text-base text-slate-700 dark:text-neutral-300 sm:mt-5 sm:text-xl lg:text-lg xl:text-xl">
                Modern, responsive and beautiful websites that are fast and easy to use.
              </p>
              <p>
                <div class="w-fit background-animate rounded-lg mt-6 sm:mt-10 bg-gradient-to-r p-[3px] from-[#6EE7B7] via-[#3B82F6] to-[#9333EA] hover:scale-110">
                <a href="#" class="bg-neutral-100 dark:bg-slate-900 rounded-lg p-3 inline-block text-sm sm:text-base text-slate-700 dark:text-neutral-300 hover:text-blue-400 font-sans font-semibold">
                  Find out more
                </a>
                </div>
              </p>
              
            </div>
          </div>
              <div
                class="absolute top-0 opacity-10 sm:opacity-100 transition-opacity transform sm:relative bg-slate-900 rounded-l-2xl w-fit pl-16 -mb-16 lg:h-full lg:w-1/2 h-1/2"
              >
              <HeroSVG />
          </div>
        </div>
 
    </div>

    {/* More main page content here... */}
  </main>